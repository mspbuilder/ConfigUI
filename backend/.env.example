PORT=3000
NODE_ENV=development

# Read-only mode - blocks all DB writes and logs SQL instead
DB_READ_ONLY=true

# MojoPortal Database (for user authentication)
MOJO_DB_SERVER=localhost
MOJO_DB_DATABASE=MojoPortal
MOJO_DB_USER=sa
MOJO_DB_PASSWORD=yourpassword
MOJO_DB_PORT=1433

# Configurations Database (for config data)
CONFIG_DB_SERVER=localhost
CONFIG_DB_DATABASE=Configurations
CONFIG_DB_USER=sa
CONFIG_DB_PASSWORD=yourpassword
CONFIG_DB_PORT=1433

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-change-this
MOJO_JWT_SECRET=same-as-mojoportal-launcher-ascx
JWT_EXPIRATION=4h

# MFA
MFA_ISSUER=MSPBuilder
MFA_WINDOW=2

# Azure Middleware (if still needed)
MIDDLEWARE_URI_AZURE=https://mspbuilder.azurewebsites.net
MIDDLEWARE_AZURE_MFA_AUTH=your-auth-code

# CORS (allow MojoPortal domain)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8080,https://www.mspbuilder.com
